<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ccff" >

    <TextView
        android:id="@+id/callDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/rejectcall"
        android:layout_marginBottom="10dp"
        android:text="Call From"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:onClick="handleButtonClick"
        android:text="Mute" />

    <Button
        android:id="@+id/rejectcall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mute"
        android:layout_alignBottom="@+id/mute"
        android:layout_toRightOf="@+id/mute"
        android:onClick="handleButtonClick"
        android:text="Reject" />

    <Button
        android:id="@+id/reject_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rejectcall"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/rejectcall"
        android:onClick="handleButtonClick"
        android:text="Reject With Text" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Incoming Call" />

    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:minHeight="250dp"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher" />
    
</RelativeLayout>